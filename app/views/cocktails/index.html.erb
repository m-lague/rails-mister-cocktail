<%= render 'shared/banner' %>
<div class="container wrapper">
  <div class="row">

    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail_path(cocktail) do %>
        <div class="card text-center">

          <% if cocktail.photo %>
            <div class="card-header" style='background-image: url("<%= cl_image_path cocktail.photo.path %>")'>
            </div>
          <% else %>
            <div class="card-header">

            <%= cl_image_tag("f00343c9488a8fd6c482027b36093573--bora-bora-liqueur_mypial", :transformation=>[
              {:effect=>"tint", :height=>237, :opacity=>72, :quality=>41, :radius=>18, :width=>116, :crop=>"fit", :fetch_format=>"png"},
              {:angle=>325}
              ])%>
            </div>
          <% end %>
          <div class="card-body">
            <%= cocktail.name %>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>






