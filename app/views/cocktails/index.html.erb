<h1 class="text-center">Your cocktail list</h1>

<div class="text-center padded">
  <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">

    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail_path(cocktail) do %>
        <div class="card text-center">

          <% if cocktail.picture %>
            <div class="card-header" style="background-image: url('<%= image_path cocktail.picture%>'); height:200px;">
            </div>
          <% else %>
            <div class="card-header">
            <%=   cl_image_tag("f00343c9488a8fd6c482027b36093573--bora-bora-liqueur_mypial", :transformation=>[
              {:effect=>"tint", :height=>237, :opacity=>72, :quality=>41, :radius=>18, :width=>116, :crop=>"fit", :fetch_format=>"png"},
              {:angle=>325}
              ])%>
            </div>
          <% end %>
          <div class="card-body">
            <%= cocktail.name %>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>






